<Window x:Class="DQB2IslandEditor.InterfacePK.MWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DQB2IslandEditor.InterfacePK"
        mc:Ignorable="d"
        Title="MWindow" Height="800" Width="1200" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.OpacityMask>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="0.5,0.5">
                    <GradientStop Color="Transparent" Offset="0" />
                    <GradientStop Color="#90000090" Offset="1" />
                </LinearGradientBrush>
            </Grid.OpacityMask>
            <Viewbox Stretch="UniformToFill" VerticalAlignment="Center" >
                <Image Name="MinimapBackgroundOld" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            </Viewbox>
            <Viewbox Stretch="UniformToFill" VerticalAlignment="Center">
                <Image Name="MinimapBackground" Source="{Binding CurrentMinimapBackground}" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            </Viewbox>
        </Grid>
        <Grid Grid.ColumnSpan="2" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <StackPanel VerticalAlignment="Center" Margin="10,0">
                <Button Content="Open CMNDAT" Click="Button_Click"/>
                <Button Content="Open Chunk Editor" Click="Button_Click_1" IsEnabled="{Binding ButtonV}"/>
            </StackPanel>
            <Grid Grid.Column="1"  Visibility="{Binding SaveDataVisibility}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="1" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="&lt;" Click="SelectedIslandLeft"/>
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding CurrentIslandName}" FontSize="20" FontWeight="Bold" MinWidth="400" TextAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedIsland, StringFormat=STGDAT{0:D2}.BIN}" TextAlignment="Center"/>
                    </StackPanel>
                    <Button Content=">" Click="SelectedIslandRight" Grid.Column="2"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>

</Window>
