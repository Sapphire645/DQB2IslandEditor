<UserControl x:Class="DQB2IslandEditor.InterfacePK.ChunkEditor.Tool.Information.BlockValues"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DQB2IslandEditor.InterfacePK.ChunkEditor.Tool.Information"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox>
        <Grid>
            <Border Background="Black" BorderBrush="LightBlue" BorderThickness="1.5" CornerRadius="5" Padding="8" Margin="0,12,0,0" MinWidth="550">
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <StackPanel Margin="15,0">
                        <TextBlock Text="Chisel Value:" Foreground="White" FontSize="14" TextWrapping="WrapWithOverflow" FontWeight="DemiBold"/>
                        <TextBlock Text="{Binding ValueChisel}" Foreground="White" FontSize="14" Margin="0,6" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <Image Source="{Binding ValueChiselImage}" MinWidth="10" Margin="0,0,15,0"/>
                    <StackPanel Margin="15,0">
                        <TextBlock Text="Builder Placed:" Foreground="White" FontSize="14" TextWrapping="WrapWithOverflow" FontWeight="DemiBold"/>
                        <TextBlock Text="{Binding ValueBuilderPlaced}" Foreground="White" FontSize="14" Margin="0,6" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Background="Black" BorderBrush="LightBlue" BorderThickness="1.5" CornerRadius="8" Margin="4,0" Padding="12,4" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24">
                    <TextBlock Text="Block Values" Foreground="White" Margin="8,-2,8,0" FontWeight="SemiBold"  FontSize="12">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="0" />
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
        </Grid>
    </Viewbox>
</UserControl>
